<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge header" style="color: whitesmoke;"><i class = "left idea icon" style="color: rgb(235, 235, 74)"></i>Top Blogs For Today!</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
        <div class="item">
          <div class="image">
              <img src="<%=blog.image%>">
          </div>
          <div class="content">
              <a class = "header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
              <div class="meta">
                <span><%=blog.created.toDateString()%></span>
              </div>
              <div class="description">
                  <p><%-blog.body.substring(0, 75)%>...</p>
              </div>
              <div class="extra">
                  <a class = "ui positive button" href="/blogs/<%=blog._id%>">Read More<i class="right chevron icon"></i></a>
              </div>
          </div>
         </div>
       <% }) %>
       
    </div>
  </div>
</div>

<% include ./partials/footer %>