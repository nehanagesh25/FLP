<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">
    <%= blog.title %>
  </div>
  <div class="ui top attached">
        <div class="item">
            <img class = "ui centered rounded image" src="<%=blog.image%>">
        <div class="content date">
            <span><i><strong><%=blog.created.toDateString()%></strong></i></span>
        </div>
        <div class="description">
            <p><%-blog.body%></p> 
          </div> 
          <div class="show-layout">
              <a class = "ui positive button" href="/blogs/<%=blog._id%>/edit"><i class = "left edit icon"></i>Edit Post</a>
              <form id = "delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui negative button"><i class = "left trash alternate icon"></i>Delete Post</button>
              </form> 
          </div>
        </div>
  </div>
 </div>
 <% include ./partials/footer %>